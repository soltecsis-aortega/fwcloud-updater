[Unit]
Description=fwcloud-updater

[Service]
ExecStart=/usr/bin/npm start
ExecStop=/usr/bin/npm run stop
WorkingDirectory=/opt/fwcloud-updater/
StandardOutput=/opt/fwcloud-updater/logs/stdout.log
StandardError=/opt/fwcloud-updater/logs/stderr.log
SyslogIdentifier=fwcloud-updater
User=fwcloud
Group=fwcloud
Type=forking

Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target